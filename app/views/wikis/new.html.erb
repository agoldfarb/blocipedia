<h1>New Wiki</h1>
<br>
<div class="row">
  <div class="col-md-8">
    <%= form_for @wiki do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'from-control', autofocus: true, placeholder: "Wiki Title" %>
      </div>
      <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Wiki Body" %>
      </div>
      <% if current_user.role == 'admin' || current_user.role == 'premium' %>
        <div class="form-group">
          <%= f.check_box :private %> Private
          <%= f.label :private, class: 'checkbox' do %>
        </div>
      <% end %>    
      <div class="form-group">
        <%= f.submit "Save", class: 'btn btn-success' %>
      </div>
    <% end %> 
  </div>
<% end %>
</div>

