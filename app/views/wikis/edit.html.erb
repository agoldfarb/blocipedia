<h1>Edit Wiki</h1>
 
<div class="row">
  <div class="col-md-8">
    <%= form_for @wiki do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'from-control', placeholder: "Wiki Title" %>
      </div>
      <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Wiki Body" %>
      </div>
      <% if current_user.role == 'admin' || current_user.role == 'premium' %>
        <div class="form-group">
          <%= f.check_box :private %> Private
          <%= f.label :private, class: 'checkbox' do %>
          <% end %>
        </div>
      <% end %> 
      <% if current_user.is_owner_of? @wiki %>
        <%= render partial: 'collaborators/form' %>
      <% end %>
      <div class="form-group">
        <%= f.submit "Save", class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>
